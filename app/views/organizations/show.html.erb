<div class="organization container">
  <div class="row">
    <div class="span3">
      <%= render partial: "/organizations/sidebar" %>
    </div>
    <div class="span9">
      <% if @organization.has_charts? %>
        <%= link_to t("organizations.sections.charts"), organization_charts_path(@organization) %>
      <% else %>
        <h1><%= t("organizations.no_charts") %></h1>
      <% end %>
      
      <% @organization.initialize_widgets.each do |area, widgets| %>
        <% widgets.each do |widget| %>
        <div class="widget <%= widget.type %>">
          <%= render partial: "/widgets/#{widget.type}", locals: { widget: widget } %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

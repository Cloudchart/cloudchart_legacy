<%= simple_form_for(@organization || Organization.new, url: organizations_path, html: { class: "form-horizontal organization-new", data: { behavior: "organization-new"} }) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, :required => true, :autofocus => true %>
    <%= f.input :description, as: :text, input_html: { rows: 10 } %>
    <%= f.input :contacts, as: :text, input_html: { rows: 10 } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t("organizations.create"), class: "btn btn-primary" %>
  </div>
<% end %>

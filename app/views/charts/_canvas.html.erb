<%
  chart ||= nil
%>
<div class="chart canvas" data-init="chart">
  <% if chart %>
  <div class="side">
    <% if can?(:edit, chart) %>
      <%= link_to t("charts.edit"), edit_chart_path(chart.id) %> |
      <% if chart.user_id %>
        <%= link_to t("charts.edit_token"), token_chart_path(id: chart.id, token: chart.token) %> |
      <% end %>
    <% end %>
    <%= link_to t("charts.pdf"), chart_path(chart.id, format: :pdf) %> |
    <%= link_to t("charts.png"), chart_path(chart.id, format: :png) %>
  </div>
  <% end %>
  
  <div id="canvas" data-no-turbolink></div>
</div>

<div class="overlay delete">
  <div class="box">
    <div class="content">
      <h1><%= t("charts.delete.confirm") %></h1>
    </div>
    <div class="buttons">
      <button class="half fire" data-action="<%= chart_path(chart.slug_or_id) %>"><%= t("charts.delete.fire") %></button>
      <button class="half cancel"><%= t("charts.cancel") %></button>
    </div>
  </div>
</div>

<div class="overlay history" data-action="<%= chart_versions_path(chart.slug_or_id) %>">
  <div class="box">
    <div class="header">
      <h1><%= t("charts.history.descr") %></h1>
      <button class="cancel"></button>
    </div>
    <div class="content">
    </div>
  </div>
</div>

<div class="overlay share">
  <div class="box">
    <div class="content">
      <h1><%= t("charts.share.descr") %></h1>
      <%= simple_form_for(:share, html: { class: "form-horizontal" }, url: share_chart_path(chart.slug_or_id) ) do |f| %>
        <%= f.input :type, as: :hidden, input_html: { value: "" } %>
        <div class="control-group">
          <label class="control-label" for="share[email]">
            <%= t("charts.share.public") %>
            <span><%= t("charts.share.public_descr") %></span>
          </label>
          <div class="controls">
            <%= f.input :public, as: :hidden, input_html: { value: short_chart_url(chart.slug_or_id) } %>
            <%= f.input :public_email, label: false, placeholder: short_chart_path(chart.slug_or_id), input_html: { data: { placeholder: short_chart_path(chart.slug_or_id) } } %>
            <button class="btn btn-small copy" data-clipboard-text="<%= short_chart_url(chart.slug_or_id) %>" data-replace="Ã—"><%= t("charts.share.copy") %></button>
            <button class="btn btn-small email" data-enter="<%= t("charts.share.enter") %>" data-send="<%= t("charts.share.send") %>" data-type="public" data-error="<%= t("charts.share.error") %>" data-sent="<%= t("charts.share.sent") %>"><%= t("charts.share.email") %></button>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="share[email]">
            <%= t("charts.share.private") %>
            <span><%= t("charts.share.private_descr") %></span>
          </label>
          <div class="controls">
            <%= f.input :private, as: :hidden, input_html: { value: short_token_chart_url(id: chart.slug_or_id, token: chart.token) } %>
            <%= f.input :private_email, label: false, placeholder: short_token_chart_path(id: chart.slug_or_id, token: chart.token), input_html: { data: { placeholder: short_token_chart_path(id: chart.slug_or_id, token: chart.token) } } %>
            <button class="btn btn-small copy" data-clipboard-text="<%= short_token_chart_url(id: chart.slug_or_id, token: chart.token) %>" data-replace="Ã—"><%= t("charts.share.copy") %></button>
            <button class="btn btn-small email" data-enter="<%= t("charts.share.enter") %>" data-send="<%= t("charts.share.send") %>" data-type="private" data-error="<%= t("charts.share.error") %>" data-sent="<%= t("charts.share.sent") %>"><%= t("charts.share.email") %></button>
          </div>
        </div>
      <% end %>
    </div>
    <div class="buttons">
      <button class="cancel"><%= t("charts.share.return") %></button>
    </div>
  </div>
</div>

<div class="overlay persons">
  <div class="box">
    <div class="content">
      <%= simple_form_for(:person, html: { class: "form-horizontal" }, url: chart_persons_path(chart_id: @chart.id) ) do |f| %>
        <div class="control-group">
          <div class="control-label">
            <%= image_tag "ico-person.png", class: "person", data: { icon: image_path("ico-person.png") } %>
          </div>
          <div class="controls">
            <%= f.input :q, label: false %>
            <%= f.submit value: "" %>
          </div>
        </div>
        <div class="control-group">
          <div class="control-label">
            <%= image_tag "ico-best-guess.png", class: "best-guess" %>
          </div>
          <div class="controls">
            <% if user_signed_in? %>
            <ul class="list">
            </ul>
            <div class="profile"></div>
            <% else %>
            <h3><%= t("common.please_sign_in") %></h3>
            <% end %>
            <%= render partial: "/shared/loading" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="buttons for-list">
      <button class="fire"><%= t("charts.persons.okay") %></button>
    </div>
    <div class="buttons for-profile">
      <button class="half fire"><%= t("charts.persons.add") %></button>
      <button class="half return"><%= t("charts.persons.return") %></button>
    </div>
  </div>
</div>

<div class="overlay person">
  <div class="box">
    <div class="content profile">
      
    </div>
    <div class="buttons">
      <button class="cancel"><%= t("charts.person.return") %></button>
    </div>
  </div>
</div>

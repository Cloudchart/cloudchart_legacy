<% if user_signed_in? %>
  <%= link_to t("common.sign_out"), destroy_session_path(current_user), class: "sign_out", data: { "no-turbolink" => "" } %>
  <%= link_to image_tag("btn-settings.png", alt: t("common.settings"), title: t("common.settings")), edit_user_registration_path, class: "settings" %>
<% else %>
  <%=
    content_tag :button, "",
      class: "sign_in",
      title: t("common.sign_linkedin"),
      data: { href: user_omniauth_authorize_path(provider: :linkedin) }
  %>
<% end %>
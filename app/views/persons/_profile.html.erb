<% if person %>
  <%= content_tag :div, data: { person: person } {} %>
  
  <% if person.picture_url.present? %>
    <%= image_tag person.picture_url %>
  <% end %>
  
  <div class="right">
    <h3><%= person.name %></h3>
    <% if person.position %>
      <h4><%= person.position %></h4>
      <p class="company"><%= person.company %></p>
    <% else %>
      <h4><%= person.headline.present? ? person.headline : "" %>&nbsp;</h4>
    <% end %>
    
    <% if person.description.present? %>
      <p class="descr"><%= simple_format person.description %></p>
    <% end %>
    
    <textarea placeholder="<%= t("charts.person.add_note_#{browser.mobile? ? "tap" : "click"}") %>" data-title="<%= title %>" data-prev="<%= note %>"<%= " disabled" unless can?(:edit, chart) %>><%= note %></textarea>
    
    <% if person.profile_url %>
    <p class="links">
      <%= link_to t("common.linkedin"), person.profile_url, class: "linkedin", target: "_blank" %>
    </p>
    <% end %>
  </div>
<% else %>
  <h1><%= t("charts.person.not_found") %></h1>
<% end %>

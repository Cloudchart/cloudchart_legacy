<% insert ||= false %>
<% if !insert %>
<div class="header">
<% end %>

  <h1><%= @node.normalized_title %></h1>
  <ul>
    <% @persons.each do |node| %>
    <% person = @chart.find_person(node.title) || next %>
    <li>
      <div onclick="App.chart.click('<%= node.id %>')">
        <% if person.picture_url.present? %>
          <%= image_tag person.picture_url %>
        <% else %>
          <%= image_tag "/images/ico-person.png" %>
        <% end %>
        
        <h3><%= person.name %></h3>
        <% if person.position %>
          <h4><%= person.position %></h4>
          <p class="company"><%= person.company %></p>
        <% else %>
          <h4><%= person.headline.present? ? person.headline : "" %>&nbsp;</h4>
        <% end %>
      </div>
    </li>
    <% end if @persons %>
  </ul>

<% if !insert %>
</div>
<% end %>
